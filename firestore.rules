
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILE
    // Users can read and write their own top-level profile document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // USER-SPECIFIC SUBCOLLECTIONS (PRIVATE)
    // Data like tasks are private and only accessible by the owner.
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth.uid == userId;
    }

    // USER-SPECIFIC SUBCOLLECTIONS (PUBLIC READ for AGGREGATION)
    // Exam data needs to be readable by any authenticated user for the 
    // class average calculation, but writable only by the owner.
    match /users/{userId}/exams/{examId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // PUBLIC COLLECTIONS
    // Notes and Announcements are readable by all, but only writable by privileged users.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isPrivileged == true;
    }

    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isPrivileged == true;
    }
  }
}
