
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can fully read and write their own documents.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Announcements can be read by any authenticated user, but only
    // written by privileged users.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isPrivileged == true;
    }

    // Notes can be read by any authenticated user, but only
    // written by privileged users.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isPrivileged == true;
    }

    // This is the crucial rule for the class average chart. It allows an authenticated user
    // to query across all 'exams' collections (a 'list' operation). This is needed to
    // gather all scores for a specific exam type. Individual exam documents are still
    // protected by the /users/{userId} rule above.
    match /{path=**}/exams/{examId} {
      allow list: if request.auth != null;
    }
  }
}
