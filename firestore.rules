
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read/write access to a user's own data and documents
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read all exams for class average calculation.
    // Write access is still restricted to the user who owns the data by the rule above.
    match /{path=**}/exams/{examId} {
        allow read: if request.auth != null;
    }

    // Allow read access to public collections like announcements and notes
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isPrivileged == true;
    }

    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isPrivileged == true;
    }
  }
}
